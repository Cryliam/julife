/* pages/taxi/taxi.wxss */
page{
  height: 100%;
  width:100%;
}
.navbar{
  display: flex;
  float: left;
  border-style: solid;
  border-width: 2rpx;
  width:99%;
  height: 5%;
  text-align: center;
  background-color: white;
}
.navtext{
  width: 50%;
  
}

.container1{
  float: left;
  margin-top: 50rpx;
  height: 90%;
  width: 100%;
}
scroll-view{
  height: 90%;
}
.in{
  width: 100%;
  height: 150rpx;
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
  border-bottom-color: #D2E9FF;
  border-bottom-style: solid;
}
.addrInfo{
  margin-top: 10rpx;
  float: left;
  display: flex;
  flex-direction: column;
  width: 55%;
  margin-left: 20rpx;

}
.aim{
  display:-webkit-box;
  -webkit-line-clamp:1;
  overflow:hidden;
  text-overflow:ellipsis;
  -webkit-box-orient:vertical;
  float: left;
  font-size: 40rpx;
  font-weight: bold;
}
.temp{
  display:-webkit-box;
  -webkit-line-clamp:1;
  overflow:hidden;
  text-overflow:ellipsis;
  -webkit-box-orient:vertical;
  font-size: 30rpx;
  margin-top: 10rpx;
}
.number{
  font-size: 30rpx;
}
.userInfo{
  margin-top: 10rpx;
  float: left;
  width: 30%;
  margin-right: 0rpx;
}
.avatar{
  height: 80rpx;
  width: 80rpx;
  float: left;
}
.day{
  float: left;
  margin-top: 10rpx;
}
.gender{
  height: 80rpx;
  width: 80rpx;
  float: right;
  margin-top: 30rpx;
  margin-right: 0rpx;
}
.name{
  margin-left: 15rpx;
  float: left;
  font-size: 30rpx;
}
.extra{
  display: flex;
  float: left;
  border-style: solid;
  border-width: 2rpx;
  width:99%;
  height: 5%;
  text-align: center;
}
.extraText{
    width: 50%;
}
.green{
  color:green;
  font-weight: bold;
}
.yellow{
  color:orange;
  font-weight: bold;
}
.red{
  color:red;
  font-weight: bold;
}





.container2{
  height: 90%;
  width: 100%;
}
form{
  border-style: solid;
  width: 80%;
  height: 600rpx;
  margin: auto;
  margin-top: 20rpx;
}
.circle{
  float: left;
  width: 30rpx;
  height: 30rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
}
input{
  width: 80%;
  height: 60rpx;
  border-bottom-style: solid;
  border-width: 4rpx;
  margin: auto;
  margin-top: 20rpx;
}
.btn{
  background-color: #F0F0F0;
  width: 100%;
  height: 80rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
